@using RestaurantSupportWebApp.ViewModels;
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="d-flex align-items-center py-4 bg-body-tertiary">
    <div class="form-signin w-100 m-auto">
        <form asp-action="Login">
            <h1 class="h3 mb-3 fw-normal">Будь ласка, увійдіть</h1>

            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="floatingInput">
                <label for="floatingInput">Ім'я користувача</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword">
                <label for="floatingPassword">Пароль</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Увійти</button>
        </form>
    </div>
</div>
